@model List<LinksTable>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Links</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Guid</th>
                <th>Link</th>
                <th>Create Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LinksTable item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><a href="/Redirect/Link/@item.Guid" target="_blank">@item.Guid</a></td>
                    <td>@item.Link</td>
                    <td>@item.CreationTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
